@model UsuarioModelCustom


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid bg-dark">

    
    @*<div class="center-form">*@
        
    <div class="row">

        <form class="simple-login-container  p-3 form" method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <label asp-for="NombreUsuario">Username: </label>
                <input class="form-control" placeholder="Ingresar usuario" asp-for="NombreUsuario" type="text" />
                <span asp-validation-for="NombreUsuario" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash">Contraseña: </label>
                <input class="form-control" asp-for="PasswordHash" placeholder="Ingresar Contraseña" type="password" />
                <span asp-validation-for="PasswordHash" class="alert-danger"></span>
            </div>


            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" />

                </label>
                <p class="text-muted">activar usuario?</p>
                
            </div>

            <div class="row justify-content-center">

                <button class="btn btn-dark text-muted" type="submit" value="Usuario">Enviar</button>
                @Html.ValidationSummary(true, "", new { @class = "alert-danger" });

                <div class="separation">
                    <h3 class="text-left align-content-center text-muted">Iniciar session</h3>
                </div>

            </div>
            

        </form>

