
@model UsuarioModelCustom

@{
    ViewData["Title"] = "Usuario";
    Layout = "~/Views/Account/_LayoutAccount.cshtml";
}


<div class="container-fluid">

    <h3 class="bg-transparent text-center align-content-center">Iniciar session </h3>
    <div class="center-form">


        <form asp-controller="Usuario" asp-action="Usuario" class="border p-3 form justify-content-center" method="post">
            <div class="form-group">
                <label>Username: </label>
                <input class="form-control" placeholder="Ingresar usuario" asp-for="NombreUsuario" name="nombre" type="text" />
                <span asp-validation-for="Email" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label>Contraseña: </label>
                <input class="form-control" asp-for="PasswordHash" placeholder="Ingresar Contraseña" name="password" type="password" />
                <span asp-validation-for="PasswordHash" class="alert-danger"></span>
            </div>


            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" />
                    activar usuario?
                </label>
            </div>

            <button class="btn btn-info" type="submit" value="Usuario">Enviar</button>
            @Html.ValidationSummary(true, "", new { @class = "alert-danger" });
        </form>
    </div>

</div>