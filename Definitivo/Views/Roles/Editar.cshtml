
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/layouts/_LayoutAccount.cshtml";
}

@model CrearRoleM

   

    <form method="post" class="mt-1 bg-info">
        
            <!-- Grid column -->
            <div class="col-md-6">
                <div class="card">

                    <div class="card-header">


                        <h3 class="default-text py-3 text-danger"><i class="fa fa-lock"></i>Lista de Usuarios</h3>
                    </div>

                    <div class="card-body ">
                        <!--Body-->
                        <div class="form-group">
                            <i class="fa fa-envelope prefix grey-text"></i>
                            <input asp-for="Id" disabled class="col-sm-6 form-control" />
                            <label for="Id" class="text-center">EL Id</label>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-lock prefix grey-text"></i>
                            <input asp-for="RoleName" class="col-sm-6 form-control" />
                            <label for="RoleName">El Rol</label>
                        </div>
                        
                            <button type="submit" class="btn btn-secondary">Editar</button>
                            <a asp-action="RolesView" class="btn btn-outline-primary">Cancelar</a>
                       
                    </div>
                </div>
            </div>


            @* cards para usuarios*@

            <div class="card">
                <div class="card-header">
                    Lista de usuarios con roles
                </div>

                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5><a type="submit" asp-action="Borrarrol" asp-route-idrole="@Model.Id">Eliminar rol</a>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">sin usuarios por aqui</h5>
                    }

                </div>

                <div class="card-footer">
                    <input type="submit" class="btn btn-dark" style="width:auto"/>

                    <a asp-action="EditUsersInRole" asp-route-roleid="@Model.Id">Agregar o borrar usuarios</a>        
                </div>
            </div>
    </form>
