    <form method="post" class="mt-3">
        <div class="form-group row">

        </div>

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10"></div>
            <input asp-for="Id" disabled class="col-sm-2 form-control" />
        </div>

        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="RoleName" class="col-sm-2 form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-secondary">Editar</button>
                <a asp-action="RolesView" class="btn btn-outline-primary">Cancelar</a>
            </div>
        </div>

        @* cards para usuarios*@

        <div class="card">
            <div class="card-header">
                Lista de usuarios con roles
            </div>

            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                       <h5 class="card-title">@user</h5>
                    }
                }
                else 
                {
                    <h5 class="card-title">sin usuarios por aqui</h5>
                }

            </div>

            <div class="card-footer">

            </div>
        </div>

    </form>
